<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase / 

    # Redirect requests for /api/
    RewriteRule ^api/(.*)$ src/api/$1 [L,QSA]

    # Handle static assets directly
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    RewriteRule ^ index.php [L]
</IfModule>
